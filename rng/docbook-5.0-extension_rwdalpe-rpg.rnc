        rpg.pathfinder.population.attlist,
        (
            (rpg.pathfinder.population.count.attribute, 
             db._text*,
             db.indexing.inlines*,
             db.link.inlines*)
            | (rpg.pathfinder.population.count.attribute?, 
               (db._text
               | db.indexing.inlines
               | db.link.inlines)+)
        )
    }
rpg.pathfinder.populations.role.attribute = attribute role { text }
rpg.pathfinder.populations.total.attribute = attribute total { text }
